<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="shortcut icon"
      href="https://i.ibb.co/jkjN5RV/4267503.png"
      type="image/x-icon"
    />
    <title>Register</title>
    <style>
      form {
        width: 400px;
        padding: 1.5rem;
        border-radius: 0.5rem;
        background: #e0f2f5;
      }

      .alert {
        width: 400px;
        margin: auto;
        display: none;
      }
    </style>
  </head>

  <body>
    <h4 class="text-center text-primary mt-5">Register</h4>
    <div class="alert alert-success mt-5" role="alert">
      Registered successfully, now you can login.
    </div>
    <div class="container d-flex align-items-center justify-content-center">
      <form class="mt-5" id="form">
        <div class="mb-3">
          <label for="username" class="form-label">Userame</label>
          <input
            type="text"
            name="username"
            class="form-control"
            id="username"
            autocomplete="off"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            autocomplete="off"
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" />
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script>
      const form = document.getElementById("form");
      const alert = document.querySelector(".alert");
      const username = document.getElementById("username");
      const email = document.getElementById("email");
      const password = document.getElementById("password");
      const alertText = document.querySelector(".alert-text");

      form.addEventListener("submit", (e) => {
        e.preventDefault();
        const user = {
          username: username.value,
          email: email.value,
          password: password.value,
        };

        fetch("/register", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(user),
        })
          .then((res) => res.json())
          .then((data) => {
            username.value = "";
            email.value = "";
            password.value = "";
            alert.style.display = "block";
          })
          .catch((error) => {
            console.log(error);
          });
      });
    </script>
  </body>
</html>
